<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CurrentJobSelect">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="241dp"
        tools:layout_editor_absoluteY="174dp">

        <TextView
            android:id="@+id/currentJobSelectorLabel"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:background="#B3A369"
            android:text="Current Job Selector"
            android:textAlignment="center"
            android:textSize="16sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="36dp" />

        <ListView
            android:id="@+id/jobSelectorForCurrentJobView"
            android:layout_width="match_parent"
            android:layout_height="385dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="31dp" />

        <TextView
            android:id="@+id/labelForCurrentJobQuerySpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Which job would you like to make your current job?"
            android:textAlignment="center" />

        <Spinner
            android:id="@+id/currentJobSelectorSpinner"
            android:layout_width="match_parent"
            android:layout_height="41dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/currentJobSelectorBtn"
                android:layout_width="177dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#003057"
                android:text="@string/selectCurrentJobBtnLabel" />

            <Button
                android:id="@+id/returnToJobEntryFromCurrentSelectorBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#003057"
                android:text="@string/ReturnToJobEntry" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>