<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="415dp"
        android:layout_height="736dp"
        android:background="#BCB9B9"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/SettingTextViewId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="#B3A369"
            android:gravity="center_horizontal"
            android:text="Settings"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/salaryWeightText"
                    android:layout_width="166dp"
                    android:layout_height="33dp"
                    android:text="     Salary Weight"
                    android:textAlignment="textStart" />

                <TextView
                    android:id="@+id/salaryWeightValue"
                    android:layout_width="41dp"
                    android:layout_height="wrap_content"
                    android:text="1" />

                <SeekBar
                    android:id="@+id/seekBarSalary"
                    android:layout_width="158dp"
                    android:layout_height="34dp"
                    android:max="5"
                    android:min="1" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/bonusWeightText2"
                    android:layout_width="167dp"
                    android:layout_height="wrap_content"
                    android:text="     Bonus Weight" />

                <TextView
                    android:id="@+id/bonusWeightValue"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:text="1" />

                <SeekBar
                    android:id="@+id/seekBarBonus"
                    android:layout_width="158dp"
                    android:layout_height="34dp"
                    android:max="5"
                    android:min="1" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/retirementWeightText"
                    android:layout_width="167dp"
                    android:layout_height="wrap_content"
                    android:text="     Retirement Weight" />

                <TextView
                    android:id="@+id/retirementWeightValue3"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:text="1" />

                <SeekBar
                    android:id="@+id/seekBarRetirement"
                    android:layout_width="158dp"
                    android:layout_height="34dp"
                    android:max="5"
                    android:min="1" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/relocationWeightText"
                    android:layout_width="166dp"
                    android:layout_height="32dp"
                    android:text="     Relocation Weight" />

                <TextView
                    android:id="@+id/relocationWeightValue4"
                    android:layout_width="41dp"
                    android:layout_height="wrap_content"
                    android:text="1" />

                <SeekBar
                    android:id="@+id/seekBarRelocation"
                    android:layout_width="158dp"
                    android:layout_height="34dp"
                    android:max="5"
                    android:min="1" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/trainingWeightText"
                    android:layout_width="166dp"
                    android:layout_height="wrap_content"
                    android:text="     Training Weight" />

                <TextView
                    android:id="@+id/trainingWeightValue5"
                    android:layout_width="41dp"
                    android:layout_height="wrap_content"
                    android:text="1" />

                <SeekBar
                    android:id="@+id/seekBarTraining"
                    android:layout_width="158dp"
                    android:layout_height="34dp"
                    android:max="5"
                    android:min="1" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="155dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="189dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/cancelButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#003057"
                    android:text="Cancel" />

                <Button
                    android:id="@+id/saveSettingsButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#003057"
                    android:text="save" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>